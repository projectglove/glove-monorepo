[Unit]
Description=Glove Nitro service
After=network.target

[Service]
ExecStart=/usr/local/glove/service --proxy-secret-phrase "{{ glove_proxy_secret_phrase }}" --address {{ glove_address }} --node-endpoint {{ glove_node_endpoint }} --regular-mix in-memory
Type=simple
Restart=always

[Install]
WantedBy=default.target
RequiredBy=network.target
